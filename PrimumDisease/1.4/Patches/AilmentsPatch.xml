<?xml version="1.0" encoding="utf-8" ?>
<Patch> 
<!--Carcinoma: Should spread and have stages similar to leukemia. Also should give sick thought and have lethality-->
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/HediffDef[defName = "Carcinoma"]/stages</xpath>
		<value>
			<stages>
				<li>
					<label>early</label>
					<becomeVisible>false</becomeVisible>
					<statOffsets>
						<PsychicSensitivity>0.2</PsychicSensitivity>
					</statOffsets>
				</li>
				<li>
					<minSeverity>0.05</minSeverity>
					<label>minor</label>
					<painOffset>0.1</painOffset>
					<statOffsets>
						<PsychicSensitivity>0.2</PsychicSensitivity>
					</statOffsets>
					<hediffGivers>
						<li Class="HediffGiver_Random">
							<hediff>Carcinoma</hediff>
							<mtbDays>180</mtbDays>
							<partsToAffect>
								<li>Liver</li>
								<li>Kidney</li>
								<li>Lung</li>
								<li>Heart</li>
								<li>Brain</li>
								<li>Tongue</li>
								<li>Stomach</li>
								<li>Skull</li>
								<li>Pelvis</li>
								<li>Spine</li>
							</partsToAffect>
						</li>
					</hediffGivers>
				</li>
				<li>
					<minSeverity>0.4</minSeverity>
					<label>major</label>
					<painOffset>0.25</painOffset>
					<statOffsets>
						<PsychicSensitivity>0.2</PsychicSensitivity>
					</statOffsets>
					<hediffGivers>
						<li Class="HediffGiver_Random">
							<hediff>Carcinoma</hediff>
							<mtbDays>60</mtbDays>
							<partsToAffect>
								<li>Liver</li>
								<li>Kidney</li>
								<li>Lung</li>
								<li>Heart</li>
								<li>Brain</li>
								<li>Tongue</li>
								<li>Stomach</li>
								<li>Skull</li>
								<li>Pelvis</li>
								<li>Spine</li>
							</partsToAffect>
						</li>
					</hediffGivers>
				</li>
				<li>
					<minSeverity>0.8</minSeverity>
					<label>terminal</label>
					<painOffset>0.4</painOffset>
					<statOffsets>
						<PsychicSensitivity>0.2</PsychicSensitivity>
					</statOffsets>
					<hediffGivers>
						<li Class="HediffGiver_Random">
							<hediff>Carcinoma</hediff>
							<mtbDays>20</mtbDays>
							<partsToAffect>
								<li>Liver</li>
								<li>Kidney</li>
								<li>Lung</li>
								<li>Heart</li>
								<li>Brain</li>
								<li>Tongue</li>
								<li>Stomach</li>
								<li>Skull</li>
								<li>Pelvis</li>
								<li>Spine</li>
							</partsToAffect>
						</li>
						<li Class="HediffGiver_Random">
							<hediff>HeartAttack</hediff>
							<allowOnLodgers>false</allowOnLodgers>
							<allowOnQuestRewardPawns>false</allowOnQuestRewardPawns>
							<allowOnQuestReservedPawns>false</allowOnQuestReservedPawns>
							<allowOnBeggars>false</allowOnBeggars>
							<mtbDays>150</mtbDays>
							<partsToAffect>
								<li>Heart</li>
							</partsToAffect>
						</li>
						<li Class="HediffGiver_Random">
							<hediff>PD_Stroke</hediff>
							<allowOnLodgers>false</allowOnLodgers>
							<allowOnQuestRewardPawns>false</allowOnQuestRewardPawns>
							<allowOnQuestReservedPawns>false</allowOnQuestReservedPawns>
							<allowOnBeggars>false</allowOnBeggars>
							<mtbDays>150</mtbDays>
							<partsToAffect>
								<li>Brain</li>
							</partsToAffect>
						</li>
					</hediffGivers>
				</li>
			</stages>
		</value>
	</Operation>
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/HediffDef[defName = "Carcinoma"]/comps</xpath>
		<value>
			<comps>
				<li Class="HediffCompProperties_TendDuration">
					<baseTendDurationHours>96</baseTendDurationHours>
					<severityPerDayTended>-0.005</severityPerDayTended>
				</li>
				<li Class="HediffCompProperties_GrowthMode">
					<severityPerDayGrowing>0.005</severityPerDayGrowing>
					<severityPerDayRemission>-0.0033</severityPerDayRemission>
					<severityPerDayGrowingRandomFactor>0.5~1.83</severityPerDayGrowingRandomFactor>
					<severityPerDayRemissionRandomFactor>0.7~1.5</severityPerDayRemissionRandomFactor>
				</li>
			</comps>
		</value>
	</Operation>
	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/HediffDef[defName = "Carcinoma"]</xpath>
		<value>
			<makesSickThought>true</makesSickThought>
		</value>
	</Operation>
	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/HediffDef[defName = "Carcinoma"]</xpath>
		<value>
			<cureAllAtOnceIfCuredByItem>true</cureAllAtOnceIfCuredByItem>
		</value>	
	</Operation>

<!--Cirrhosis: should cause liver cancer-->
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/HediffDef[defName = "Cirrhosis"]/stages</xpath>
		<value>
			<stages>
				<li>
					<partEfficiencyOffset>-0.60</partEfficiencyOffset>
					<painOffset>0.15</painOffset>
					<capMods>
						<li>
							<capacity>Moving</capacity>
							<offset>-0.10</offset>
						</li>
					</capMods>
					<hediffGivers>
						<li Class="HediffGiver_Random">
							<hediff>Carcinoma</hediff>
							<mtbDays>240</mtbDays>
							<partsToAffect>
								<li>Liver</li>
							</partsToAffect>
						</li>
					</hediffGivers>
				</li>
			</stages>
		</value>
	</Operation>
	
<!--Resurrection psychosis: Spreads memetically!-->
	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/HediffDef[defName = "ResurrectionPsychosis"]</xpath>
		<value>
			<modExtensions>
				<li Class="PrimumDisease.PD_TransmissionExtension">
					<transmissionMethods>
						<li>PD_Memetic</li>
					</transmissionMethods>
					<virulenceFactor>0.25</virulenceFactor>
					<survivalOnCooked>1</survivalOnCooked>
				</li>
			</modExtensions>
		</value>
	</Operation>
	
	
	
	
	
	
	

</Patch>