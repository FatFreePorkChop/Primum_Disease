<?xml version="1.0" encoding="utf-8" ?>
<Patch>
<!--Plague via germs-->
    <Operation Class="PatchOperationAdd">
		<xpath>Defs/HediffGiverSetDef[defName = "OrganicStandard"]/hediffGivers</xpath>
		<value>
			<li Class="PrimumDisease.PD_HediffGiver_CommunicateDiseaseDirect">
				<diseaseDef>Plague</diseaseDef>
				<diseaseFilth>PD_Filth_PlagueGerms</diseaseFilth>
				<germDropRate>20</germDropRate>
				<humanlikeDisease>true</humanlikeDisease>
				<animalDisease>false</animalDisease>
			</li>
		</value>
    </Operation>


<!--Gut worms via germs-->
    <Operation Class="PatchOperationAdd">
		<xpath>Defs/HediffGiverSetDef[defName = "OrganicStandard"]/hediffGivers</xpath>
		<value>
			<li Class="PrimumDisease.PD_HediffGiver_CommunicateDiseaseDirect">
				<diseaseDef>GutWorms</diseaseDef>
				<diseaseFilth>PD_Filth_GutWorms</diseaseFilth>
				<germDropRate>5</germDropRate>
				<humanlikeDisease>true</humanlikeDisease>
				<animalDisease>false</animalDisease>
			</li>
		</value>
    </Operation>


<!--Cirrhosis disease giver: borrows bad back distribution, like bright's disease-->	
	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/HediffGiverSetDef[defName = "OrganicStandard"]/hediffGivers</xpath>
		<value>
			<li Class="HediffGiver_Birthday">
				<hediff>Cirrhosis</hediff>
				<partsToAffect>
					<li>Liver</li>
				</partsToAffect>
				<ageFractionChanceCurve>
					<points>
						<li>(0.5, 0)</li>
						<li>(0.625, 0.0093)</li>
						<li>(0.75, 0.01395)</li>
						<li>(0.875, 0.01395)</li>
						<li>(1, 0.0186)</li>
					</points>
				</ageFractionChanceCurve>
			</li>
		</value>
	</Operation>
	
<!--Creutzfeldt rim disease giver-->	
	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/HediffGiverSetDef[defName = "OrganicStandard"]/hediffGivers</xpath>
		<value>
			<li Class="HediffGiver_Birthday">
				<hediff>PD_CreutzfeldtRimDisease</hediff>
				<ageFractionChanceCurve>
					<points>
						<li>(0.25, 0)</li>
						<li>(0.5, 0.00025)</li>
						<li>(1, 0.0005)</li>
					</points>
				</ageFractionChanceCurve>
				<averageSeverityPerDayBeforeGeneration>0.0005</averageSeverityPerDayBeforeGeneration>
			</li>
		</value>
	</Operation>
	
<!--Brain artery blockage giver-->	
	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/HediffGiverSetDef[defName = "OrganicStandard"]/hediffGivers</xpath>
		<value>
			<li Class="HediffGiver_Birthday">
				<hediff>PD_BrainArteryBlockage</hediff>
				<partsToAffect>
					<li>Brain</li>
				</partsToAffect>
				<ageFractionChanceCurve>
					<points>
						<li>(0.25, 0)</li>
						<li>(0.3, 0.001)</li>
						<li>(0.5, 0.00145)</li>
						<li>(1, 0.0016)</li>
						<li>(1.5, 0.0017)</li>
					</points>
				</ageFractionChanceCurve>
				<averageSeverityPerDayBeforeGeneration>0.00025</averageSeverityPerDayBeforeGeneration>
			</li>
		</value>
	</Operation>
	
<!--Leukemia giver: bimodal distribution, more common in the young or the old.-->	
	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/HediffGiverSetDef[defName = "OrganicStandard"]/hediffGivers</xpath>
		<value>
			<li Class="HediffGiver_Birthday">
				<hediff>PD_Leukemia</hediff>
				<ageFractionChanceCurve>
					<points>
						<li>(0.25, 0.001)</li>
						<li>(0.5, 0.0001)</li>
						<li>(1.5, 0.0015)</li>
					</points>
				</ageFractionChanceCurve>
				<averageSeverityPerDayBeforeGeneration>0.0005</averageSeverityPerDayBeforeGeneration>
			</li>
		</value>
	</Operation>
	
<!--Fibroma giver: Similar to cancer distribution-->	
	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/HediffGiverSetDef[defName = "OrganicStandard"]/hediffGivers</xpath>
		<value>
			<li Class="HediffGiver_Birthday">
				<hediff>PD_Fibroma</hediff>
				<canAffectAnyLivePart>true</canAffectAnyLivePart>
				<ageFractionChanceCurve>
					<points>
						<li>(0.28, 0)</li>
						<li>(1, 0.0011)</li>
						<li>(1.5, 0.0015)</li>
					</points>
				</ageFractionChanceCurve>
				<averageSeverityPerDayBeforeGeneration>0.0005</averageSeverityPerDayBeforeGeneration>
			</li>
		</value>
	</Operation>
	
<!--Bright's disease giver: borrows bad back distribution-->	
	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/HediffGiverSetDef[defName = "OrganicStandard"]/hediffGivers</xpath>
		<value>
			<li Class="HediffGiver_Birthday">
				<hediff>PD_ChronicKidneyDisease</hediff>
				<partsToAffect>
					<li>Kidney</li>
				</partsToAffect>
				<countToAffect>2</countToAffect>
				<ageFractionChanceCurve>
					<points>
						<li>(0.5, 0)</li>
						<li>(0.625, 0.0093)</li>
						<li>(0.75, 0.01395)</li>
						<li>(0.875, 0.01395)</li>
						<li>(1, 0.0186)</li>
					</points>
				</ageFractionChanceCurve>
				<averageSeverityPerDayBeforeGeneration>0.0005</averageSeverityPerDayBeforeGeneration>
			</li>
		</value>
	</Operation>
</Patch>