<?xml version="1.0" encoding="utf-8" ?>

<Defs>
    <IncidentDef Name="PD_DiseaseIncident_Immunizable" Abstract="True">
        <workerClass>IncidentWorker_DiseaseHuman</workerClass>
        <category>DiseaseHuman</category>
        <targetTags>
            <li>Map_PlayerHome</li>
            <li>Map_TempIncident</li>
            <li>Map_Misc</li>
            <li>Map_RaidBeacon</li>
            <li>Caravan</li>
        </targetTags>
        <diseaseVictimFractionRange>
            <min>0.12</min>
            <max>0.3</max>
        </diseaseVictimFractionRange>
        <letterText>{0} of your {1} have gotten sick from {2}.\n\nEnsure you have a medical bed and a doctor. Make sure that they get proper treatment and spend as much time in bed as possible. This disease may spread, keep your colonists safe!\n\nThe following {1} have gotten sick:\n\n{3}</letterText>
        <letterDef>NegativeEvent</letterDef>
    </IncidentDef>

