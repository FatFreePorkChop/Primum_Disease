<?xml version="1.0" encoding="utf-8" ?>
<Patch>
<!--CureAilment-->


<!--CureAilmentComplex-->
	<Operation Class="PrimumDisease.PatchOperationAddOrReplace">
		<xpath>/Defs/RecipeDef[defName = "ExciseCarcinoma"]</xpath>
		<key>workAmount</key>
		<value>4000</value>
	</Operation>
	<Operation Class="PrimumDisease.PatchOperationAddOrReplace">
		<xpath>/Defs/RecipeDef[defName = "ExciseCarcinoma"]</xpath>
		<key>deathOnFailedSurgeryChance</key>
		<value>0.2</value>
	</Operation>
	<Operation Class="PrimumDisease.PatchOperationAddOrReplace">
		<xpath>/Defs/RecipeDef[defName = "ExciseCarcinoma"]</xpath>
		<key>surgerySuccessChanceFactor</key>
		<value>1</value>
	</Operation>
	<Operation Class="PrimumDisease.PatchOperationAddOrReplace">
		<xpath>/Defs/RecipeDef[defName = "ExciseCarcinoma"]</xpath>
		<key>skillRequirements</key>
		<value>
			<Medicine>13</Medicine>
		</value>
	</Operation>
	<Operation Class="PrimumDisease.PatchOperationAddOrReplace">
		<xpath>/Defs/RecipeDef[defName = "ExciseCarcinoma"]/ingredients[1]</xpath>
		<key>count</key>
		<value>5</value>
	</Operation>
	<Operation Class="PrimumDisease.PatchOperationAddOrReplace">
		<xpath>/Defs/RecipeDef[defName = "ExciseCarcinoma"]/fixedIngredientFilter</xpath>
		<key>disallowedThingDefs</key>
		<value>
        	<li>MedicineHerbal</li>
		</value>
	</Operation>


<!--CureAilmentSpecial-->
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Royalty</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PrimumDisease.PatchOperationAddOrReplace">
					<xpath>/Defs/RecipeDef[defName = "CureAbasia" or defName = "CureBloodRot"]</xpath>
					<key>workAmount</key>
					<value>2000</value>
				</li>
				<li Class="PrimumDisease.PatchOperationAddOrReplace">
					<xpath>/Defs/RecipeDef[defName = "CureAbasia" or defName = "CureBloodRot"]</xpath>
					<key>deathOnFailedSurgeryChance</key>
					<value>0.25</value>
				</li>
				<li Class="PrimumDisease.PatchOperationAddOrReplace">
					<xpath>/Defs/RecipeDef[defName = "CureAbasia" or defName = "CureBloodRot"]</xpath>
					<key>surgerySuccessChanceFactor</key>
					<value>1.5</value>
				</li>
				<li Class="PrimumDisease.PatchOperationAddOrReplace">
					<xpath>/Defs/RecipeDef[defName = "CureAbasia" or defName = "CureBloodRot"]</xpath>
					<key>skillRequirements</key>
					<value>
						<Medicine>10</Medicine>
					</value>
				</li>
				<li Class="PrimumDisease.PatchOperationAddOrReplace">
					<xpath>/Defs/RecipeDef[defName = "CureAbasia" or defName = "CureBloodRot"]/ingredients[1]</xpath>
					<key>count</key>
					<value>7</value>
				</li>
				<li Class="PrimumDisease.PatchOperationAddOrReplace">
					<xpath>/Defs/RecipeDef[defName = "CureAbasia" or defName = "CureBloodRot"]/fixedIngredientFilter</xpath>
					<key>disallowedThingDefs</key>
					<value>
						<li>MedicineHerbal</li>
						<li>MedicineIndustrial</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>


</Patch>
