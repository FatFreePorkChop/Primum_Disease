<?xml version="1.0" encoding="utf-8" ?>

<Defs>

    <TaleDef>
        <defName>MalariaTale</defName>
        <label>musquito scourge</label>
        <taleClass>Tale_SinglePawn</taleClass>
        <type>Volatile</type>
        <baseInterest>1</baseInterest>
        <rulePack>
            <rulesStrings>
                <li>tale_noun->scourge of musquitoes starting in [PAWN_nameDef]'s [Community]</li>
